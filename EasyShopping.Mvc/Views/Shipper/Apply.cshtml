<div class="modal fade" id="packageMess" role="dialog" style="overflow:hidden" *ngIf="shipper">
    <div class="modal-content" style="margin:10% 30% 0 30%;">
        <div class="modal-body">
            <h2>Purchase Detail</h2>
            <label>Name: </label><p>{{user.userName}}</p>
            <label>Total: </label><p>{{shipper.Total | currency:'vnd'}}</p>
            <label>Deposit: </label><p>{{shipper.Deposit | currency:'vnd'}}</p>
            <label>Package: {{package.Pack}} + {{package.Total | currency:'vnd'}}</label>
            <div id="paypalhere"></div>
            <div id="paypal-button"></div>
            <button hidden (click)="BuyPackage()" id="purchasebtn"></button>
            <a class="btn btn-danger" style="bottom: 6px;position: absolute;right: 3px;" data-dismiss="modal">Close</a>
        </div>
    </div>
