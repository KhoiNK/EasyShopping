<div class="col-sm-7">
    <div class="form_row">
        <label>Note:</label>
        <input type="text" [(ngModel)]="order.Note" class="form-control"/>
    </div>
    <div class="form_row">
        <label>Address:</label>
        @*<input type="text" [(ngModel)]="store.Address" class="form_name"/>*@
        <div class="form-group">
            <input placeholder="search for location" autocorrect="off" autocapitalize="off" spellcheck="off" type="text" class="form-control" #search [formControl]="searchControl" />
        </div>
        <sebm-google-map [latitude]="latitude" [longitude]="longitude" [scrollwheel]="false" [zoom]="zoom">
            <sebm-google-map-marker [latitude]="latitude" [longitude]="longitude"></sebm-google-map-marker>
        </sebm-google-map>
    </div>
    <div class="form_row">
        <button (click)="SaveChange()" class="btn btn-success">Check out</button>
    </div>
</div>
<div class="col-sm-5" *ngIf="order">
    <div *ngFor="let detail of order.details" class="row">
        <div class="col-xs-9">{{detail.Name}}</div>
        <div class="col-xs-3">{{detail.Price}}</div>
    </div>
</div>