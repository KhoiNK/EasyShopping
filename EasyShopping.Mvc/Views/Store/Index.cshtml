<div>
    <h1>Store List</h1>
    <a href="#" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Add Store</a>
    <div *ngIf="stores">
        <table class="table table-striped table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let store of stores">
                    <td>{{store.ID}}</td>
                    <td>{{store.Name}}</td>
                    <td>{{store.Status}}</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-success btn-xs button"><span class="glyphicon glyphicon-check"></span> Approve</a>
                        <a href="#" class="btn btn-info btn-xs button"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a href="#" class="btn btn-danger btn-xs button"><span class="glyphicon glyphicon-remove"></span> Del</a>
                    </td>
                </tr>
                
            </tbody>
        </table>
    </div>
</div>


