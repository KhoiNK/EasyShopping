<div class="container">
    <h1>Add Store</h1>
    <div class="form">
        <div class="form_row">
            <label>Name:</label>
            <input type="text" class="form_name" [(ngModel)]="store.Name" name="name" />
        </div>
        <div class="form_row">
            <label>Tax Code:</label>
            <input type="text" class="form_name" name="" [(ngModel)]="store.TaxCode"/>
        </div>
        <div class="form_row">
            <label>Bank Account:</label>
            <input type="text" class="form_name" name="" [(ngModel)]="store.BankAccount"/>
        </div>
        <div class="form_row">
            <label>Description:</label>
            <textarea [(ngModel)]="store.Description" class="form_name" name="description"></textarea>
        </div>
        <div class="form_row">
            <label>Country:</label>
            <select class="form_name" name="country" [(ngModel)]="store.CountryId" (change)="OnSelectCountry($event.target.value)">
                <option *ngFor="let country of countries" value="{{country.Id}}">{{country.CommonName}}</option>
            </select>
        </div>
        <div class="form_row">
            <label>City:</label>
            <select class="form_name" name="city" [(ngModel)]="store.CityId" (change)="OnSelectCity($event.target.value)">
                <option *ngFor="let city of cities" value="{{city.Id}}">{{city.Name}}</option>
            </select>
        </div>
        <div class="form_row">
            <label>District:</label>
            <select class="form_name" name="district" [(ngModel)]="store.DistrictId" (change)="OnSelectDistrict($event.target.value)">
                <option *ngFor="let district of districts" value="{{district.Id}}">{{district.Name}}</option>
            </select>
        </div>
        <div class="form_row">
            <label>Ward:</label>
            <select class="form_name" name="ward" [(ngModel)]="store.WardId">
                <option>Select one</option>
            </select>
        </div>
        <div class="form_row">
            <label>Address:</label>
            @*<input type="text" [(ngModel)]="store.Address" class="form_name"/>*@
            <google-map></google-map>
        </div>
        <div class="form_row">
            <label>Avatar:</label>
            <input type="file" class="form_name" name="photo" id="photo"/>
        </div>
        <div class="form_row">
            <button type="submit" class="form_submit" (click)="SaveChange($event)"> Add</button>
        </div>
    </div>
</div>