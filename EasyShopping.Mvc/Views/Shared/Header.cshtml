
<header id="header">
    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="logo pull-left">
                        <a [routerLink]="['/']"><img src="~/Content/img/home/logo.png" alt="" /></a>
                        <img src="~/Content/img/home/partner2.png" class="side-logo"/>
                    </div>

                </div>
                <div class="col-sm-4">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            <li *ngIf="user"><a [routerLink]="['/users/user-detail', user.ID]"><i class="fa fa-user"></i>{{user.UserName}}</a></li>
                            <li><a [routerLink]="['/orders/order-detail', cart]"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                            <li *ngIf="!isSignedIn"><a [routerLink]="['/login']"><i class="fa fa-lock"></i> Login</a></li>
                            <li *ngIf="isSignedIn"><a (click)="logout()"><i class="fa fa-lock"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-middle-->

    <div class="header-bottom">
        <!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li id="home"><a [routerLink]="['']" class="active">Home</a></li>
                            <li *ngIf="isSignedIn"><a [routerLink]="['/stores/store-add']">Create Store</a></li>
                            <li *ngIf="isSignedIn"><a [routerLink]="['/orders']">My Orders</a></li>
                            <li *ngIf="isSignedIn"><a [routerLink]="['/stores/store-approve-list']">Store List</a></li>
                            <li *ngIf="isSignedIn"><a [routerLink]="['/shippers']">Be a shipper</a></li>
                            <li *ngIf="isSignedIn"><a [routerLink]="['/shippers/shipperlist']">Approve Shipper</a></li>
                            <li><a [routerLink]="['/stores']">Find Store</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="search_box search_recommend">
                        <input type="text" placeholder="Search" (keyup)="SearchProduct()" (keyup.enter)="SetSearchKey()" [(ngModel)]="searchkey"/>
                        <ul *ngIf="products" id="searchResult">
                            <li *ngFor="let product of products">
                                <a [routerLink]="['/products/product-detail', product.ID]">{{product.Name}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
</header>
